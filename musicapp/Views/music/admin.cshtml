@model musicapp.Models.Music
@{
    ViewData["Title"] = "AdminControls";
}

<h1 style="color:white;font-family:'Times New Roman'">ADD MUSIC</h1>
<form method="post">


    <select asp-for="Genreid" class="form-control" required>
        <br />
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
    </select>
    <br />


    <select asp-for="Genrename" class="form-control"    required >
        <br />
        <option>western</option>
        <option>Classical</option>
        <option>Rock</option>
        <option>Instrumental</option>
        <option>Devotional</option>
    </select><br />


   

    <input type="text" asp-for="MusicName" class="form-control" placeholder="Musicname" required /><br />



    <input type="file" asp-for="MusicPath" class="form-control" placeholder="music path" required><br />

    <input type="file" asp-for="ImgPath" class="form-control" placeholder="image path" value="/musicf/" required><br />

    <br />


    <input type="submit" value="register" class="btn btn-success" />


</form>

@Html.ActionLink("View Feedback", "coments", null, new {@class="btn btn-primary"})
<div class="btn btn-success">@ViewData["msg"]</div>