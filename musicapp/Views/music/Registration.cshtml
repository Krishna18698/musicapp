@model musicapp.Models.User
@{
    ViewData["Title"] = "Registration";
}

<section  style="background-color: black; height:1000px;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="~/image/banner4.jpg"
                                 alt="Sample photo" class="img-fluid"
                                 style="border-top-left-radius: 1rem; border-bottom-left-radius: 1rem; height:855px" />
                        </div>
                        <div class="col-xl-6">
                            <div class="card-body p-md-5 text-black">
                               

                                <form method="post">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0">Registration</span>
                                    </div>

                                    

                                    <div class="form-floating mb-3" >

                                        <input type="text" asp-for="Username" class="form-control" id="floatingInput" placeholder="Enter username" required />
                                        <label for=" floatingInput">Username:</label><br />
                                    </div>
                                    <div class="form-floating mb-3" >
                                        <input type="email" asp-for="Email" class="form-control" id="floatingInput" placeholder="Enter Email" required /><br />
                                        <label for="floatingInput">Email</label>
                                    </div>

                                    <div class="form-floating mb-3" >

                                        <input type="password" asp-for="Password" class="form-control" id="floatingInput" placeholder="Enter Password" required />
                                        <label for=" floatingInput">Password</label><br />
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input type="date" asp-for="Dob" class="form-control" id="floatingInput" placeholder="Enter Date of Birth" required /><br />
                                        <label for="floatingInput">DOB</label>
                                    </div>
                                    <div class="form-floating mb-3" >
                                        <input type="phone" asp-for="Phone" class="form-control" id="floatingInput" placeholder="Enter Phone number" required /><br />
                                        <label for="floatingInput">Phone number</label>
                                    </div>

                                    <select asp-for="MusicPlan" class="form-control" required>
                                        <br />
                                        <option value="200">1 month /200rs</option>
                                        <option value="1000">6 months /1000rs</option>
                                        <option value="2000">1 year/2000rs</option>
                                    </select>

                                    <div class="pt-1 mb-4">
                                        <input type="submit" class="btn btn-primary" value="Submit" type="button">
                                    </div>
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                         Already Have an Account? <a asp-action="Login" style="color: #393f81;">Login here</a>
                                    </p>
                                    <p>
                                        @ViewData["msg"]
                                    </p>
                                    </form>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

