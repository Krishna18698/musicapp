@model IEnumerable<musicapp.Models.Music>
@{
    ViewData["Title"] = "Filter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Filter</h1>

@*@Html.ActionLink("Products", "Products")
*@
@*using (Html.BeginForm("music","Home", FormMethod.Get))
   { *@
       <form method="get" action="Home">

    <div class="container">
        <div class="row row-cols-3 row-cols-md-3">
            @foreach (var item in Model)
            {

                <div class="col">
                    <div class="card " style="width: 20rem;">
                        <div class="card-body">


                            <h5 class="card-title"> @item.MusicName</h5>
                            <br />

                            <img style="width:250px;height:150px;" src="@item.ImgPath">
                            <br />
                            @item.Genrename
                            <br />


                            <audio controls>
                                <source src="@item.MusicPath" />
                            </audio>

                            <a asp-action="feedback" asp-route-music_id=@item.MusicId asp-route-music_name=@item.MusicName asp-route-genrename=@item.Genrename class="btn btn-primary">feedback</a>
                        </div>
                    </div>
                </div>


            }
        </div>
    </div>
</form>