@model musicapp.Models.Music

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="top">Update</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post" class="form-control-color">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Genreid" class="control-label"></label>
                <input asp-for="Genreid" class="form-control1" />
                <span asp-validation-for="Genreid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genrename" class="control-label"></label>
                <input asp-for="Genrename" class="form-control1" />
                <span asp-validation-for="Genrename" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MusicId" class="control-label"></label>
                <input asp-for="MusicId" class="form-control1" />
                <span asp-validation-for="MusicId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MusicName" class="control-label"></label>
                <input asp-for="MusicName" class="form-control1" />
                <span asp-validation-for="MusicName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MusicPath" class="control-label"></label>
                <input asp-for="MusicPath" class="form-control1" />
                <span asp-validation-for="MusicPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgPath" class="control-label"></label>
                <input asp-for="ImgPath" class="form-control1" />
                <span asp-validation-for="ImgPath" class="text-danger"></span>
            </div>
   
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a  asp-action="Songlist">Back to Song List</a>
</div>

